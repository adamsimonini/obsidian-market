{
  "name": "obsidian-market",
  "private": true,
  "scripts": {
    "backend": "cd backend && supabase start",
    "app": "cd frontend && npm run dev",
    "chain": "amareleo-chain start",
    "dev": "run-p backend web",
    "db:push": "cd backend && supabase db push",
    "db:reset:local": "cd backend && supabase db reset",
    "db:reset:remote": "cd backend && supabase db reset --linked",
    "seed-aleo": "./scripts/seed-markets.sh",
    "seed-aleo:local": "./scripts/seed-markets.sh",
    "seed-aleo:remote": "source backend/.env && SUPABASE_URL=$SUPABASE_PROJECT_URL SUPABASE_SERVICE_KEY=$SUPABASE_SERVICE_ROLE_KEY ./scripts/seed-markets.sh"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
